{
    "chat.agent.maxRequests": 25,  // Maximum requests agent can make (default: 25)
    "chat.editing.autoAcceptDelay": 0,  // Delay before auto-accepting edits (0 = disabled)
    "terminal.integrated.profiles.windows": {
        "PowerShell Admin (External)": {
            "path": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "$dir='${workspaceFolder}'; Start-Process powershell -ArgumentList '-NoProfile','-ExecutionPolicy','Bypass','-NoExit','-Command',\"Set-Location '$dir'\" -Verb RunAs"
            ],
            "icon": "shield"
        },
        "PowerShell User (External)": {
            "path": "powershell.exe",
            "args": [
                "-NoProfile",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "$dir='${workspaceFolder}'; Start-Process powershell -ArgumentList '-NoProfile','-ExecutionPolicy','Bypass','-NoExit','-Command',\"Set-Location '$dir'\""
            ],
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.windows": "PowerShell",

}